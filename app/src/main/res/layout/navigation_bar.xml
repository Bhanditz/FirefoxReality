<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <LinearLayout
            style="?attr/navigationBarStyle"
            android:id="@+id/navigationBarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:orientation="horizontal">

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/backButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_weight="1"
                android:tint="@color/midnight"
                android:src="@drawable/ic_icon_back" />

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/forwardButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_forward" />

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/reloadButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_reload" />

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/homeButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_home" />

            <org.mozilla.vrbrowser.ui.NavigationURLBar
                android:id="@+id/urlBar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="100"
                android:layout_marginStart="10dp" />

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/focusEnterButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_focus_mode" />
        </LinearLayout>

        <LinearLayout
            style="?attr/navigationBarStyle"
            android:id="@+id/focusModeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:padding="0dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/resizeButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_focus_mode_resize" />

            <org.mozilla.vrbrowser.ui.NavigationBarButton
                android:id="@+id/focusExitButton"
                style="?attr/navigationBarButtonStyle"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_icon_focus_mode_exit" />
        </LinearLayout>
    </RelativeLayout>
</merge>
